<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_text" parent="TextAppearance.Compat.Notification">
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:textSize"> 18sp </item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/raleway_italic</item>


        <!-- Тень -->
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowColor">#F2272727</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="style_main_button" parent="TextAppearance.Compat.Notification">
        <item name="textAllCaps">false</item>
        <item name="android:textSize"> 18sp </item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/buttonsrc</item>
    </style>

    <style name="style_heading" parent="TextAppearance.Compat.Notification">
        <item name="android:textSize"> 25sp </item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:fontFamily">@font/raleway_italic</item>
        <item name="android:textColor"> @color/white </item>
    </style>
</resources>