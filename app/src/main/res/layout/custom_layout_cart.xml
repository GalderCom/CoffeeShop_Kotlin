<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cart_bcg"
    android:layout_marginStart="25sp"
    android:layout_marginEnd="25dp">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="13dp"
                    app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/cart_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_marginStart="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginTop="-5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Капучино"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/raleway_medium"
                                    android:textSize="16sp"
                                    android:letterSpacing="0.02"/>
                                <TextView
                                    android:layout_marginTop="-4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Итальянский кофе"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/oswald_light"
                                    android:textSize="14sp"
                                    android:letterSpacing="0.05"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="160"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/oswald_medium"
                                    android:textSize="18sp"
                                    android:letterSpacing="0.05"/>
                                <ImageView
                                    android:layout_marginStart="3dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ico_rub"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginEnd="30dp"
                            android:layout_gravity="bottom|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <ImageButton
                                    android:layout_marginTop="2dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/button_doping"
                                    android:src="@drawable/ico_sugar"/>

                                <ImageButton
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/button_doping"
                                    android:src="@drawable/ico_syrup"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_marginEnd="13dp"
                            android:layout_gravity="end|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <Button
                                    android:layout_gravity="start"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/button_minus" />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/cart_bcg_plus"
                                    android:text="1"
                                    android:fontFamily="@font/oswald_medium"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"/>

                                <Button
                                    android:layout_gravity="end"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/button_plus" />
                        </FrameLayout>

                </FrameLayout>
        </LinearLayout>

</LinearLayout>