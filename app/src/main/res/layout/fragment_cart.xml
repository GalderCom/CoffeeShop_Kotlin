<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentCart"
    android:orientation="vertical"
    android:background="@color/blue">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_heading"
                android:text="Заказ"
                android:layout_gravity="center|top" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/saveAddressList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пусто"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/oswal_regular"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray"/>
        </LinearLayout>


        <FrameLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orange_line"
                    android:scaleType="centerCrop"/>

                <FrameLayout

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">



                    <TextView
                        android:layout_marginStart="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:text="Заказ"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="18sp"
                        android:letterSpacing="0.035"
                        android:paddingBottom="4dp"/>


                    <LinearLayout
                        android:layout_marginEnd="13dp"
                        android:layout_gravity="center|end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:letterSpacing="0.05"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                        <ImageView
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ico_rub"/>
                    </LinearLayout>

                </FrameLayout>

                <Button
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    style="@style/style_main_button"
                    android:text="Оформить заказ"/>
            </LinearLayout>

        </FrameLayout>

</LinearLayout>