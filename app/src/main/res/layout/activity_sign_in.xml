<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ActivitySignIn"
    android:background="@color/blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="83dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите номер\nтелефона"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_italic"
            android:letterSpacing="0.06"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/raleway_regular"
                android:letterSpacing="0.13"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textSize="16sp"
                android:textColor="@color/main_orange"/>

        </LinearLayout>


        <EditText
            android:id="@+id/editText_numberPhone"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/oswal_regular"
            android:minWidth="200dp"
            android:text="+7"
            android:maxLength="12"
            android:paddingTop="0dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            android:inputType="number"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orange_line"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="60dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_width="match_parent"
        style="@style/style_main_button"
        android:text="Готово"
        android:onClick="Click_SignIn"/>

</LinearLayout>