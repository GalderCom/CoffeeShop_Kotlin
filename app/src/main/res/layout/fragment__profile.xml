<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentProfile"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_marginStart="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="18dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Привет, Артём!"
                                android:letterSpacing="0.05"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/raleway_italic"/>

                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+7 (941)  432-20-13"
                                android:textSize="16sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/oswal_regular"/>

                            <TextView
                                android:letterSpacing="0.04"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Омск"
                                android:textSize="14sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/raleway_italic"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_gravity="end|center"
                            android:layout_width="165dp"
                            android:layout_height="155dp"
                            android:src="@drawable/logo_angle"
                            android:scaleType="centerCrop"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="36dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">







                        <FrameLayout
                            android:paddingTop="15dp"
                            android:id="@+id/frameLayout_my_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="start|center"
                                    android:layout_width="16dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/user"
                                    android:rotation="0"
                                    android:layout_marginEnd="15dp"/>

                                <TextView
                                    android:letterSpacing="0.04"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Мои данные"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/raleway_regular"/>
                            </LinearLayout>


                            <ImageView
                                android:layout_gravity="end|center"
                                android:layout_width="8dp"
                                android:layout_height="16dp"
                                android:src="@drawable/arrow"
                                android:rotation="0" />
                        </FrameLayout>


                        <ImageView
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/line_smal"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:rotation="0" />

                        <FrameLayout
                            android:paddingTop="15dp"
                            android:id="@+id/textView_my_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginEnd="15dp"
                                    android:layout_gravity="start|center"
                                    android:layout_width="16dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/my_order"
                                    android:rotation="0" />

                                <TextView
                                    android:letterSpacing="0.04"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|start"
                                    android:text="Мои Заказы"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/raleway_regular"/>
                            </LinearLayout>


                            <ImageView
                                android:layout_gravity="end|center"
                                android:layout_width="8dp"
                                android:layout_height="16dp"
                                android:src="@drawable/arrow"
                                android:rotation="0" />
                        </FrameLayout>

                        <ImageView
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/line_smal"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:rotation="0" />

                        <FrameLayout
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginEnd="15dp"
                                    android:layout_gravity="start|center"
                                    android:layout_width="16dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/my_address"
                                    android:rotation="0" />

                                <TextView
                                    android:letterSpacing="0.04"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|start"
                                    android:text="Сохраненные адреса"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/raleway_regular"/>
                            </LinearLayout>


                            <ImageView
                                android:layout_gravity="end|center"
                                android:layout_width="8dp"
                                android:layout_height="16dp"
                                android:src="@drawable/arrow"
                                android:rotation="0" />
                        </FrameLayout>

                        <ImageView
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/line_smal"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:rotation="0" />



                        <FrameLayout
                            android:paddingTop="15dp"
                            android:paddingEnd="100dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginEnd="15dp"
                                    android:layout_gravity="start|center"
                                    android:layout_width="16dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/my_exit"
                                    android:rotation="0" />

                                <TextView
                                    android:letterSpacing="0.04"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|start"
                                    android:text="Выйти"
                                    android:textSize="18sp"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/raleway_regular"/>
                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>



    </LinearLayout>

</LinearLayout>