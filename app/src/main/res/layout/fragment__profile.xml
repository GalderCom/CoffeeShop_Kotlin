<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Profile"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="100dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/photo"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Артём"
                    android:letterSpacing="0.05"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/raleway_italic"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+7 (941)  432-20-13"
                    android:textSize="20sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/oswal_regular"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="36dp"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:letterSpacing="0.04"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Омск"
                    android:textSize="20sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/raleway_italic"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textView_my_data"
                            android:letterSpacing="0.04"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center|left"
                            android:text="Мои данные"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/raleway_regular"/>

                    <ImageView
                        android:layout_gravity="end|center"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow_left"
                        android:rotation="180" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView_my_order"
                        android:letterSpacing="0.04"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|left"
                        android:text="Мои Заказы"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_regular"/>

                    <ImageView
                        android:layout_gravity="end|center"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow_left"
                        android:rotation="180" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView_my_saveAdres"
                        android:letterSpacing="0.04"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|left"
                        android:text="Сохраненные адреса"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_regular"/>

                    <ImageView
                        android:layout_gravity="end|center"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow_left"
                        android:rotation="180" />
                </FrameLayout>


                <TextView
                    android:letterSpacing="0.04"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|left"
                    android:text="Удалить аккаунт   "
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/raleway_regular"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop ="100dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_gravity="center|bottom"
                    android:text="Выйти из учётной записи"
                    style="@style/style_main_button"/>

            </LinearLayout>


    </LinearLayout>

</ScrollView>