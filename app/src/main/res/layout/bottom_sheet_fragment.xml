<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bcg_bottom_sheet">

    <ImageView
        android:id="@+id/crossView"
        android:layout_margin="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/crossik"
        android:backgroundTint="@color/transparent"/>

    <ImageView
        android:id="@+id/favorbtn"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:layout_width="25dp"
        android:padding="1dp"
        android:layout_height="25dp"
        android:src="@drawable/heart"
        android:backgroundTint="@color/transparent"
        android:scaleType="centerCrop"/>


    <Button
        android:layout_gravity="top|center"
        android:layout_margin="12dp"
        android:layout_width="80dp"
        android:layout_height="3.5dp"
        android:background = "@drawable/line"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top">
        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_margin="40dp"
            android:backgroundTint="@color/transparent"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center|top">
            <ImageView
                android:id="@+id/imageVew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/loading_logo"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="-45dp"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_heading"
                android:textSize="20dp"
                android:text="Капучино"/>


                <TextView
                    android:id="@+id/desrView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"
                    android:letterSpacing="0.05"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:text="Капучино"/>

            <FrameLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/priceView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:letterSpacing="0.05"
                        android:text="160"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="3dp"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ico_rub" />
                </LinearLayout>

                <Button
                    android:id="@+id/addView"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    style="@style/style_main_button"
                    android:text="Добавить"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>